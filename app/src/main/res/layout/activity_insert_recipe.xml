<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/img_5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert Recipe"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp" />

    <ImageView
        android:id="@+id/img_recipe_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:background="#FBF8F8"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/btn_choose_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Image"
        android:padding="16dp"
        android:layout_marginBottom="20dp" />

    <EditText
        android:id="@+id/et_recipe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Recipe Name"
        android:padding="16dp"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/et_recipe_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Recipe Description"
        android:padding="16dp"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/et_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Ingredients"
        android:padding="16dp"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/et_steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Steps"
        android:padding="16dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/btn_save_recipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Recipe"
        android:padding="16dp" />
</LinearLayout>