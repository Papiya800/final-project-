<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/txt_breakfast_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:text="Breakfast Menu"
            android:textColor="#030303"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_breakfast"
            android:layout_width="220dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:src="@drawable/img_11" />

        <Button
            android:id="@+id/btn_quesadilla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:text="Quesadilla"
            android:backgroundTint="#3F51B5"
            android:textColor="#030303"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_breakfast1"
            android:layout_width="220dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:src="@drawable/img_12" />

        <Button
            android:id="@+id/btn_chana_dal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:text="Chana Dal"
            android:backgroundTint="#3B52A7"
            android:textColor="#0D0C0C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_breakfast2"
            android:layout_width="220dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:src="@drawable/img_13" />

        <Button
            android:id="@+id/btn_chicken_mughlai_porota_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:text="Chicken Mughlai Porota Recipe"
            android:backgroundTint="#3B52A7"
            android:textColor="#030303"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
